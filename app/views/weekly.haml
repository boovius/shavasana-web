#weekly
  .top
    %h2
      {{user.first_name}}'s Weekly
  .filter
    %label.search(for="search")
      .span.glyphicon.glyphicon-search
    %input(id="search" ng-model="search")
  .activities(ng-repeat="activity in activities | filter:search")
    .activity(ng-click="addValue(activity)")
      .title
        {{activity.title}}
      .plus.span.glyphicon.glyphicon-plus
    .value
      {{ value(activity) }}
  %form#create
    %button.btn(ng-click="flipAdding()" ng-class="adding?'btn-danger':'btn-primary'")
      {{addingMessage}}
    #adding(ng-show="adding")
      %input(type="text" placeholder="new activity" ng-model="newActivity")
      %button.btn.btn-success(ng-click="createActivity()")
        Create New Activity
